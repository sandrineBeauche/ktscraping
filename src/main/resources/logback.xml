<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] -%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="nitrite" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.sbm4j.ktscraping.core" level="DEBUG"/>
    <logger name="io.mockk.impl.recording.states" level="WARN"/>
    <logger name="io.mockk.impl.instantiation" level="WARN"/>
</configuration>